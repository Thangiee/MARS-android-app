<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:met="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_net_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Net ID"
        android:cursorVisible="true"
        met:met_floatingLabel="highlight"
        met:met_floatingLabelTextSize="14sp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee ID"
        android:cursorVisible="true"
        met:met_floatingLabel="highlight"
        met:met_floatingLabelTextSize="14sp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/et_emp_id"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:cursorVisible="true"
        met:met_floatingLabel="highlight"
        met:met_floatingLabelTextSize="14sp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/et_username"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:cursorVisible="true"
        met:met_floatingLabel="highlight"
        met:met_floatingLabelTextSize="14sp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/et_password"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:cursorVisible="true"
        met:met_floatingLabel="highlight"
        met:met_floatingLabelTextSize="14sp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="textEmailAddress"
        android:id="@+id/et_email"/>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Job Type: "
            android:id="@+id/textView4"
            android:layout_gravity="center_vertical"/>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_job_type">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teaching"
                android:id="@+id/rb_teaching"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grading"
                android:id="@+id/rb_grading"
                android:checked="false"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department"
            met:met_floatingLabel="highlight"
            met:met_floatingLabelTextSize="14sp"
            android:singleLine="true"
            android:textSize="16sp"
            android:layout_marginRight="4dp"
            android:id="@+id/et_dept"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pay Rate ($/Hr)"
            met:met_floatingLabel="highlight"
            met:met_floatingLabelTextSize="14sp"
            android:singleLine="true"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:id="@+id/et_rate"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            met:met_floatingLabel="highlight"
            met:met_floatingLabelTextSize="14sp"
            android:singleLine="true"
            android:textSize="16sp"
            android:layout_marginRight="4dp"
            android:id="@+id/et_title"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title Code"
            met:met_floatingLabel="highlight"
            met:met_floatingLabelTextSize="14sp"
            android:singleLine="true"
            android:textSize="16sp"
            android:id="@+id/et_title_code"/>

    </LinearLayout>

</LinearLayout>