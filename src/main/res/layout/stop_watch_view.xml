<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:orientation="horizontal">

    <com.uta.mars.app.STimelyView
        android:id="@+id/timely_s"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        app:text_color="@color/md_white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="-24dp"
        android:layout_toRightOf="@+id/timely_ss"/>

    <com.uta.mars.app.STimelyView
        android:id="@+id/timely_ss"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:text_color="@color/md_white"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/timely_m"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=":"
        android:textSize="40sp"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/timely_ss"
        android:textColor="@color/md_white"
        android:layout_marginLeft="-8dp"
        android:layout_toRightOf="@+id/timely_m"/>

    <com.uta.mars.app.STimelyView
        android:id="@+id/timely_m"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        app:text_color="@color/md_white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="-24dp"
        android:layout_toRightOf="@+id/timely_mm"/>

    <com.uta.mars.app.STimelyView
        android:id="@+id/timely_mm"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:text_color="@color/md_white"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="-10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=":"
        android:textSize="40sp"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:textColor="@color/md_white"
        android:layout_marginLeft="-8dp"
        android:layout_toRightOf="@+id/timely_h"/>

    <com.uta.mars.app.STimelyView
        android:id="@+id/timely_h"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        app:text_color="@color/md_white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@+id/timely_hh"
        android:layout_marginLeft="-24dp"/>

    <com.uta.mars.app.STimelyView
        android:id="@+id/timely_hh"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:text_color="@color/md_white"
        />

</RelativeLayout>